  "name": "snowfakery-mcp",
  "display_name": "Snowfakery MCP Server",
  "version": "0.0.2b1",
  "description": "MCP server for authoring, analyzing, debugging, and running Snowfakery recipes",
  "author": {
    "name": "Composable Delivery",
    "url": "https://github.com/composable-delivery"
  },
  "repository": {
